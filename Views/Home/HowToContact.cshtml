
@{
ViewData["Title"] = "How To Contact";
}

<div class="ps-contact ps-section pb-80">
    <div class="ps-container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                <div class="ps-section__header mb-50">
                    <h2 class="ps-section__title" data-mask="Contact">- Get in touch</h2>
                    <form asp-action="Contact" method="post">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                                <div class="form-group">
                                    <label>Name <sub>*</sub></label>
                                    <input type="text" name="Name" class="form-control" placeholder="Your Name" />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                                <div class="form-group">
                                    <label>Email <sub>*</sub></label>
                                    <input type="text" name="Email" class="form-control" placeholder="Your Email" />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                                <div class="form-group">
                                    <label>Email <sub>*</sub></label>
                                    <input type="text" name="Subject" class="form-control" placeholder="Subject" />
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                <div class="form-group mb-25">
                                    <label>Your Message <sub>*</sub></label>
                                    <textarea  rows="6" type="text" name="Message" class="form-control" placeholder="Tell me, I'm listening..."></textarea>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="ps-btn">Send Message<i class="ps-icon-next"></i></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                <div class="ps-section__content">
                    <br /><br /><br />
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 ">
                            <div class="ps-contact__block" data-mh="contact-block">
                                <header>
                                    <h3>USA <span> </span></h3>
                                </header>
                                <footer>
                                    <p><i class="fa fa-map-marker"></i> Lincoln, NE</p>
                                    <p><i class="fa fa-linkedin"></i><a href="https://www.linkedin.com/in/duy-lan-le-445262163/">LinkedIn</a></p>
                                    <p><i class="fa fa-folder"></i><a href="https://duylanle-portfolio.netlify.app/">My Portfolio</a></p>
                                    <p><i class="fa fa-phone"></i> (402) 304 0329</p>
                                </footer>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
